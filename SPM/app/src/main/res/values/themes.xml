<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SPM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/spm_blue_40</item>
        <item name="colorPrimaryVariant">@color/spm_blue_30</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#B3161616</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/actor</item>
        <!-- To see status bar transparent-->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Splash Screen Theme   -->
    <style name="Theme.splashscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splashscreen</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/spm_blue_40</item>
        <item name="colorPrimaryVariant">@color/spm_blue_30</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#B3161616</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/actor</item>
        <!-- To see status bar transparent-->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

<!--    Dialog style  -->
    <style name="DialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
</resources>