<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/spm_blue_30_bottom_round"
    android:elevation="4sp"
    android:orientation="vertical"
    android:paddingLeft="15sp"
    android:paddingTop="35sp"
    android:paddingRight="15sp"
    android:paddingBottom="15sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="60sp"
            android:layout_height="60sp"
            app:cardCornerRadius="55sp">

            <ImageView
                android:id="@+id/imgStudentProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStudentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:text="Ravi Panchal"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_heading" />

            <TextView
                android:id="@+id/tvStudentEnroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:text="21034211016"
                android:textColor="@color/white"
                android:textSize="@dimen/title" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>