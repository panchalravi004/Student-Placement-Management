<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddCompanyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spm_blue_30_bottom_round"
        android:elevation="5sp"
        android:orientation="vertical"
        android:paddingLeft="20sp"
        android:paddingTop="25sp"
        android:paddingRight="20sp"
        android:paddingBottom="15sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:onClick="goToDashboard"
                app:srcCompat="@drawable/icon_arrow_left" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_weight="1"
                android:text="@string/add_company"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_heading" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10sp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:padding="5sp">

                    <TextView
                        android:id="@+id/textView54"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Company Name" />

                    <EditText
                        android:id="@+id/etAddCompanyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/white_all_round"
                        android:elevation="5sp"
                        android:ems="10"
                        android:hint="Enter Company Name"
                        android:inputType="textPersonName"
                        android:padding="5sp"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:padding="5sp">

                    <TextView
                        android:id="@+id/textView55"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="HR 1 Name" />

                    <EditText
                        android:id="@+id/etAddCompanyHR1Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/white_all_round"
                        android:elevation="5sp"
                        android:ems="10"
                        android:hint="Enter HR 1 Name"
                        android:inputType="textPersonName"
                        android:padding="5sp"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:padding="5sp">

                    <TextView
                        android:id="@+id/textView56"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="HR 1 Email" />

                    <EditText
                        android:id="@+id/etAddCompanyHR1Email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/white_all_round"
                        android:elevation="5sp"
                        android:ems="10"
                        android:hint="Enter HR 1 Email"
                        android:inputType="textPersonName"
                        android:padding="5sp"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:padding="5sp">

                    <TextView
                        android:id="@+id/textView57"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="HR 2 Name" />

                    <EditText
                        android:id="@+id/etAddCompanyHR2Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/white_all_round"
                        android:elevation="5sp"
                        android:ems="10"
                        android:hint="Enter HR 2 Name"
                        android:inputType="textPersonName"
                        android:padding="5sp"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:padding="5sp">

                    <TextView
                        android:id="@+id/textView58"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="HR 2 Email" />

                    <EditText
                        android:id="@+id/etAddCompanyHR2Email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/white_all_round"
                        android:elevation="5sp"
                        android:ems="10"
                        android:hint="Enter HR 2 Email"
                        android:inputType="textPersonName"
                        android:padding="5sp"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:padding="5sp">

                    <TextView
                        android:id="@+id/textView59"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="About" />

                    <EditText
                        android:id="@+id/etAddCompanyAbout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/white_all_round"
                        android:elevation="5sp"
                        android:ems="10"
                        android:gravity="start|top"
                        android:hint="Enter About Company"
                        android:inputType="textMultiLine"
                        android:padding="5sp"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:padding="5sp">

                    <TextView
                        android:id="@+id/textView60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Web Domain" />

                    <EditText
                        android:id="@+id/etAddCompanyDomain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/white_all_round"
                        android:elevation="5sp"
                        android:ems="10"
                        android:hint="Enter Company Domain"
                        android:inputType="textPersonName"
                        android:padding="5sp"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:padding="5sp">

                    <TextView
                        android:id="@+id/textView61"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Address" />

                    <EditText
                        android:id="@+id/etAddCompanyAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/white_all_round"
                        android:elevation="5sp"
                        android:ems="10"
                        android:gravity="start|top"
                        android:hint="Enter Company Address"
                        android:inputType="textMultiLine"
                        android:padding="5sp"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:padding="5sp">

                    <Spinner
                        android:id="@+id/spAddCompanyCountry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/white_all_round"
                        android:elevation="5sp"
                        android:entries="@array/city"
                        android:padding="5sp"
                        android:textAlignment="center" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:padding="5sp">

                    <Spinner
                        android:id="@+id/spAddCompanyState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/white_all_round"
                        android:elevation="5sp"
                        android:entries="@array/city"
                        android:padding="5sp"
                        android:textAlignment="center" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:padding="5sp">

                    <Spinner
                        android:id="@+id/spAddCompanyCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/white_all_round"
                        android:elevation="5sp"
                        android:entries="@array/city"
                        android:padding="5sp"
                        android:textAlignment="center" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/btnAddCompanyAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/spm_green"
                android:text="ADD"
                app:cornerRadius="20sp" />
            <Button
                android:id="@+id/btnAddCompanyUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/spm_green"
                android:text="UPDATE"
                app:cornerRadius="20sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>