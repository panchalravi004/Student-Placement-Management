<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentDashboardActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spm_blue_30_bottom_round"
        android:elevation="5sp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20sp"
        android:paddingTop="35sp"
        android:paddingRight="20sp"
        android:paddingBottom="15sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnSDMenuBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/icon_menu_bar" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_weight="1"
                android:text="@string/student_dashboard"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_heading" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etSDSearch"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/white_left_round"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/type_here"
                android:inputType="textPersonName"
                android:padding="2sp"
                android:text="" />

            <ImageButton
                android:id="@+id/btnSDSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/spm_green_right_round"
                android:padding="2sp"
                app:srcCompat="@drawable/icon_search" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="160sp"
                android:layout_height="match_parent"
                android:layout_margin="15sp"
                android:background="@drawable/spm_blue_20_all_round"
                android:elevation="5sp"
                android:orientation="vertical"
                android:padding="10sp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spm_blue_30_all_round"
                    android:paddingLeft="25sp"
                    android:paddingTop="6sp"
                    android:paddingRight="25sp"
                    android:paddingBottom="6sp"
                    android:text="@string/jobs"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title" />

                <TextView
                    android:id="@+id/tvSDJobsCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15sp"
                    android:paddingBottom="15sp"
                    android:text="5"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sub_title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="160sp"
                android:layout_height="match_parent"
                android:layout_margin="15sp"
                android:background="@drawable/spm_blue_20_all_round"
                android:elevation="5sp"
                android:orientation="vertical"
                android:padding="10sp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spm_blue_30_all_round"
                    android:paddingLeft="25sp"
                    android:paddingTop="6sp"
                    android:paddingRight="25sp"
                    android:paddingBottom="6sp"
                    android:text="@string/applied_in"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title" />

                <TextView
                    android:id="@+id/tvSDAppliedInCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15sp"
                    android:paddingBottom="15sp"
                    android:text="5"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sub_title" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15sp"
            android:background="@drawable/spm_blue_40_all_round"
            android:elevation="5sp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="6sp">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/spm_blue_20_all_round"
                android:padding="5sp"
                android:text="@string/selected_in"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/title" />

            <TextView
                android:id="@+id/tvSDSelectedInCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sub_title" />

            <ImageButton
                android:id="@+id/btnSDSelectedIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@color/spm_blue_40"
                android:padding="5sp"
                app:srcCompat="@drawable/icon_arrow_right" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15sp">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="@string/upcoming_jobs"
            android:textColor="@color/black"
            android:textSize="@dimen/main_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_SD_upcoming_jobs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="15sp"
            android:padding="5sp"
            android:scrollbarSize="0dp" />
    </LinearLayout>

</LinearLayout>