                    android:id="@+id/btnStudentProfileUploadImage"
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:background="@drawable/spm_blue_30_all_round"
                    android:padding="5sp"
                    app:srcCompat="@drawable/icon_upload_white" />
            </LinearLayout>

