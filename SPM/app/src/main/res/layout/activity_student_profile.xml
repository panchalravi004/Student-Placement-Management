                        android:layout_margin="5sp"
                        android:background="@drawable/white_all_round"
                        android:elevation="2sp"
                        android:ems="10"
                        android:hint="Enter ID"
                        android:inputType="textPersonName"
                        android:padding="4sp"
                        android:textAlignment="center" />
