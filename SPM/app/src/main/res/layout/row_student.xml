<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    android:background="@drawable/spm_blue_10_all_round"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="15sp"
    android:paddingTop="10sp"
    android:paddingRight="15sp"
    android:paddingBottom="10sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvStudentAdapterCompanyName"
            android:layout_width="100sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/spm_blue_40_left_round"
            android:padding="2sp"
            android:text="0123456789"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/title" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/spm_blue_30_right_round"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10sp"
            android:paddingRight="10sp">

            <TextView
                android:id="@+id/tvStudentAdapterCollegeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2sp"
                android:text="MCA SEM 3 - 2022"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/title" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="8sp"
                android:layout_height="8sp"
                android:layout_marginLeft="5sp"
                android:background="@drawable/white_all_round">

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvStudentAdapterRegisterEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:text="Ravi Vasantbhai Panchal"
        android:textAlignment="center"
        android:textSize="@dimen/title" />
</LinearLayout>